<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <ImageButton
            android:id="@+id/backBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:background="@android:color/transparent"
            android:src="@drawable/ic_back" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="세부 정보를 입력해주세요."
            android:textSize="18dp" />


        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentBottom="true"
            android:layout_centerInParent="true"
            android:src="#cdcdcd" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="16dp"
        android:orientation="horizontal">
        <EditText
            android:layout_width="0dp"
            android:layout_weight="1"
            android:inputType="text"
            android:hint="닉네임"
            android:textSize="15dp"
            android:padding="5dp"
            android:background="@drawable/email_insert_form"
            android:id="@+id/nickNameEdt"
            android:layout_height="match_parent" />
        <RelativeLayout
            android:layout_width="100dp"
            android:background="@drawable/email_check_btn"
            android:id="@+id/nickNameCheck"
            android:layout_height="match_parent">
            <TextView
                android:layout_width="wrap_content"
                android:layout_centerInParent="true"
                android:text="중복확인"
                android:layout_height="wrap_content" />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_centerInParent="true"
                android:src="@drawable/ic_round_check"
                android:layout_height="wrap_content" />
        </RelativeLayout>
    </LinearLayout>

    <Spinner
        android:id="@+id/languageSpinner"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/gray_round_border_box"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="16dp"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:inputType="text"
        android:layout_marginTop="16dp"
        android:hint="추천인 닉네임"
        android:textSize="15dp"
        android:padding="5dp"
        android:background="@drawable/gray_round_border_box"
        android:layout_height="50dp" />

    <Button
        android:layout_width="match_parent"
        android:layout_margin="16dp"
        android:id="@+id/signupBtn"
        android:background="#cdcdcd"
        android:text="가입하기"
        android:layout_height="wrap_content" />


</LinearLayout>